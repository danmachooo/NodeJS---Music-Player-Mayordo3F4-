<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Album List</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-white shadow">
        <div class="max-w-6xl mx-auto px-4 py-4">
            <a class="text-green-500 font-bold text-xl" href="/">Music Player</a>
            <div class="mt-4">
                <a href="/albums" class="text-gray-700">Albums</a>
                <a href="/upload" class="ml-4 text-gray-700">Upload New Audio</a>
            </div>
        </div>
    </nav>
    <div class="container mx-auto mt-8">
        <h1 class="text-center text-3xl font-bold mb-4">Albums</h1>
        <div class="text-center mb-4">
            <a href="/albums/add" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Add New Album</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <% albums.forEach(album => { %>
                <div class="bg-white rounded-lg shadow-md p-4">
                    <img src="<%= album.cover_image %>" alt="Cover Image" class="h-48 w-full object-cover rounded-md mb-2">
                    <h5 class="text-lg font-bold"><%= album.title %></h5>
                    <p class="text-gray-700"><strong>Artist:</strong> <%= album.artist %></p>
                    <p class="text-gray-700"><strong>Release Date:</strong> <%= new Date(album.released_date).toLocaleDateString() %></p>
                    <a href="/albums/<%= album.id %>/add-audio" class="mt-2 block text-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 rounded">Add Audio</a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
